@page
@model MascotasEnCasa.App.Presentacion.Pages.Cuenta.Iniciar_sesion
@{

}
<!DOCTYPE html>
<html lang="es-CO">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>iniciar sesión</title>
</head>
<body>
    <div></div>
    <h1>Bienvenido a Veterinaria Garous</h1>
    <p>Por favor, entra con tu email y contraseña</p>
<form action="" method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <label asp-for="Credential.Email">Email</label>
    <input type="email" asp-for="Credential.Email" id="e-mail" name="e-mail" placeholder="sebastian@ejemplo.com" required maxlength="30" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="caracteres@caracteres.dominio"><br>
    <span class="text-danger" asp-validation-for="Credential.Email"></span>
    <p><a href="olvidaste_tu_contrasena.cshtml"><b>¿Olvido su Contraseña?</b></a></p>
    <label asp-for="Credential.Password"></label>
    <input type="password" asp-for="Credential.Password" id="Password" name="Password" placeholder="Introduzca la contraseña" required maxlength="50"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Debe contener al menos un número y una letra mayúscula y minúscula, y al menos 8 caracteres o más"><br>>
    <span class="text-danger" asp-validation-for="Credencial.Password"></span>
    <input type="submit" value="Iniciar Sesión">
</form>
<p>¿No tienes una cuenta?</p>
    <p><a href="crear_cuenta.html"><b>Crear cuenta</b></a></p>
    <img src="img/logo_mascota.png" alt="" width="25%" height="auto">
</body>
</html>